<div class="row">
  <div class="col-md-6">
    <h2>Create Profile</h2>

    <form class="form create-profile-form">
      <div class="form-group">
        <label for="profile-username">Profile Username:</label>
        <input class="form-input" type="text" id="profile-username" />
      </div>
      <div class="form-group">
        <label for="profile-bio">Profile Bio:</label>
        <input class="form-input" type="text" id="profile-bio" />
      </div>
      <div>
        <button id="select-profile-icon" class="btn btn-sm btn-danger">Select Profile Icon</button>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" data-id="'{{user_id}}'">Create Profile</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Update Profile</h2>

    <form class="form update-profile-form">
      <div class="form-group">
        <label for="new-username">New Username:</label>
        <input class="form-input" type="text" id="new-username" />
      </div>
      <div class="form-group">
        <label for="new-bio">New Bio:</label>
        <input class="form-input" type="text" id="new-bio" />
      </div>
      <div>
        <button id="select-profile-icon" class="btn btn-sm btn-danger">Select Profile Icon</button>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/profile.js"></script>
